@model InventoryApp.Models.InventoryItem

@{
    ViewData["Title"] = "Add New Item";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="width: 600px; border-radius: 12px;">
        <div class="card-header bg-success text-white text-center rounded mb-4">
            <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Inventory Item</h4>
        </div>

        <form asp-action="Create" method="post" onsubmit="return confirmCreate();">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter item name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter item description" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Quantity" class="form-label fw-semibold"></label>
                    <input asp-for="Quantity" class="form-control" type="number" placeholder="0" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-check-circle"></i> Save Item
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function confirmCreate() {
            return confirm("Are you sure you want to save this new item?");
        }
    </script>
}
